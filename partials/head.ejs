<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>wasteof.money <%= page? ' | '+page: '' %></title>
    <link rel="icon" href="/assets/images/brand/logo-full.svg">
    <meta property="og:site_name" content="wasteof.money" />
    <meta content="wasteof.money is a dead simple social media which focuses on interaction." property="og:description">
    <meta name="theme-color" content="#5850ec">

    <% if(locals.profile) { %>
        <meta  property="og:type" content="profile">
        <meta property="profile:username" content="<%= username %>">
    <% } %>

    <link rel="stylesheet" href="/assets/css/style.css">
    <script src="https://code.iconify.design/1/1.0.7/iconify.min.js"></script>
    <% if(locals.vue) { %>
        <script src="https://cdn.jsdelivr.net/npm/vue@2/dist/vue.js"></script>
    <% } %>
    <style>
        /* width */
        ::-webkit-scrollbar {
            width: 5px;
        }

        /* Track */
        ::-webkit-scrollbar-track {
            background: #dadada;
        }

        /* Handle */
        ::-webkit-scrollbar-thumb {
            background: #2d3748;
        }

        /* Handle on hover */
        ::-webkit-scrollbar-thumb:hover {
            background: #202733;
        }

        [v-cloak] > * { display:none; }
        [v-cloak]::before { content: "Loading..."; }    </style>
</head>